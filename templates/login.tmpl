{{define "title"}}Log in{{end}}
{{define "content"}}
  <div class="controls gap-16 max-w-420" style="max-width:420px;margin:0 auto">
    <div class="status m-0" style="justify-self:center">
      <span class="badge">Log in</span>
    </div>
    {{if .Error}}
    <div class="error-message" role="alert" style="color:#dc2626;background:#fee2e2;padding:12px;border-radius:10px;text-align:center;font-weight:700;border:1px solid #fecaca">
      {{.Error}}
    </div>
    {{end}}
    <form action="/login" method="post" class="controls gap-16">
      <input type="hidden" name="csrf" value="{{.CSRF}}">
      <div class="control-row">
        <label for="li_username">Username</label>
        <input id="li_username" name="username" type="text" placeholder="Username" autocomplete="username" spellcheck="false" required>
      </div>
      <div class="control-row">
        <label for="li_password">Password</label>
        <input id="li_password" name="password" type="password" placeholder="Password" autocomplete="current-password" spellcheck="false" required>
      </div>
      <button class="btn" type="submit">Sign in</button>
    </form>
    <div class="status m-0" style="justify-self:center;font-weight:600">
      No account?
      <a class="header-link" href="/signup" aria-current="false">Create one</a>
    </div>
  </div>
{{end}}
