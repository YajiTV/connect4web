{{define "title"}}Waiting...{{end}}
{{define "content"}}
    <h2>Waiting for your friend...</h2>
    <p>This page will move to the game when your friend accepts, or refresh shortly if still pending.</p>
    <meta http-equiv="refresh" content="0; url=/friends/challenge/check/{{.Ticket}}">

    <form method="post" action="/friends/challenge/cancel" style="margin-top:12px">
        <input type="hidden" name="csrf" value="{{.CSRF}}">
        <input type="hidden" name="ticket" value="{{.Ticket}}">
        <button type="submit" class="fr-btn">Cancel</button>
    </form>
{{end}}
