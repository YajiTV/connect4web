{{define "title"}}404 - Page non trouvée{{end}}
{{define "content"}}
  <div class="error-container">
    <div class="error-content">
      <h1 class="error-code">404</h1>
      <h2 class="error-title">Page non trouvée</h2>
      <p class="error-message">Oups ! La page recherchée n’existe pas, ou l’URL est incorrecte.</p>
      <div class="error-actions">
        <a href="/" class="btn btn-primary">Retour au lobby</a>
      </div>
      <div class="error-illustration" aria-hidden="true">
        <div class="pion pion-red"></div>
        <div class="pion pion-blue"></div>
        <div class="pion pion-red"></div>
        <div class="pion pion-blue"></div>
      </div>
    </div>
  </div>
{{end}}
